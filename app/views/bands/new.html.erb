<h1>Add a band</h1>
  <%= form_for @band do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :record_label %>
      <%= f.text_field :record_label %>
    </div>

    <div class="field">
      <%= f.label :year_formed %>
      <%= select_year(
        nil, prompt: 'Choose year', start_year: Time.now.year,
        end_year: 1900
      ) %>
    </div>

    <div class="field">
      <%= f.label :year_disbanded %>
      <%= select_year(
        nil, prompt: 'Choose year', start_year: Time.now.year,
        end_year: 1900
      ) %>
    </div>

    <div class="field">
      <%= f.label :reunion_start %>
      <%= select_year(
        nil, prompt: 'Choose year', start_year: Time.now.year,
        end_year: 1900
      ) %>
    </div>

    <div class="field">
      <%= f.label :reunion_end %>
      <%= select_year(
        nil, prompt: 'Choose year', start_year: Time.now.year,
        end_year: 1900
      ) %>
    </div>

    <div class="field">
      <%= f.label :official_link %>
      <%= f.url_field :official_link %>
    </div>

    <div class="field">
      <%= f.label :wiki_link %>
      <%= f.url_field :wiki_link %>
    </div>

    <div class="field">
      <%= f.label :biography %>
      <%= f.text_area :biography %>
    </div>

    <div class="field">
      <%= f.label :private %>
      <%= f.check_box :private? %>
    </div>

    <div class="actions">
      <%= f.submit "Add", class: "tiny button radius" %>
    </div>
  <% end %>
